<div class="col-xl-12">
   <div class="card">
      <div class="card-body">
      <h4> Bienvenido <%= current_user.first_name? ? current_user.first_name : "Usuario de BeeTools"  %></h4>
      	<br>
      	<div class="row">
      		<% if @review.any? %>
      		  <% if get_state_ready == true %>
	      		<div class="col-xl-6">
	      			<div class="table-stats order-table ov-h">
			            <table class="table table_form ">

			              <thead>
			            		<tr>
			            			<th colspan="3"><span class="badge badge-warning"> Tienes <%= @review.count %> Documento Pendiente Revisar</span></th>
			            		</tr>
			              </thead>
			              <thead>
			                <tr>
			                  <th class="serial">#</th>
			                  <th>Usuario</th>
			                  <th>Informacion</th>
			                </tr>
			              </thead>

			              <tbody>
			                <% @review.each_with_index do |review, position| %>
			                  <tr>
			                    <td class="serial"><%= position + 1 %>.</td>
			                    <td class="avatar">
			                      <div class="round-img">
			                        <%= review.user.avatar? ? image_tag(review.user.avatar_url(), class: "rounded-circle",id: "user-avatar1") : image_tag("https://dnuba.s3.amazonaws.com/uploads/bank_image/achivo/44/user.jpeg", class: "rounded-circle")%>
			                        </div>
			                    </td>
			                     <td>
			                    	<div class="text-center">
			                    		<a href="/documents/<%= review.id %>">
			         						<i class="fas fa-info-circle"></i>
			         					</a>
			                    	</div>
			                    </td>
			                  </tr>
			                <% end %>
			              </tbody>
			            </table>
	          		</div> 
	      		</div>
	      		<% end %>
      		<% end %>

			<% if @aprove.any? %>
			  <% if get_state_ready == true %>
	      		<div class="col-xl-6">
	      			<div class="table-stats order-table ov-h">
			            <table class="table table_form ">

			            	<thead>
			            		<tr>
			            			<th colspan="3"><span class="badge badge-warning"> Tienes <%= @aprove.count %> Documento Pendiente de Aprobar</span></th>
			            		</tr>
			            	</thead>
			              <thead>
			                <tr>
			                  <th class="serial">#</th>
			                  <th>Usuario</th>
			                  <th>Informacion</th>
			                </tr>
			              </thead>

			              <tbody>
			                <% @aprove.each_with_index do |aprove, position| %>
			                  <tr>
			                    <td class="serial"><%= position + 1 %>.</td>
			                    <td class="avatar">
			                      <div class="round-img">
			                        <%= aprove.user.avatar? ? image_tag(aprove.user.avatar_url(), class: "rounded-circle",id: "user-avatar1") : image_tag("https://dnuba.s3.amazonaws.com/uploads/bank_image/achivo/44/user.jpeg", class: "rounded-circle")%>
			                        </div>
			                    </td>
			                    <td>
			                    	<div class="text-center">
			        					<a href="/documents/<%= aprove.id %>">
			         						<i class="fas fa-info-circle"></i>
			         					</a>
			                    	</div>
			                    </td>	
			                  </tr>
			                <% end %>
			              </tbody>
			            </table>
	          		</div> 
	      		</div>
	      		<% end %>
      		<% end %>
      	</div>

       </div>
    </div>
</div>


<style type="text/css" media="screen">
	.padding{
		padding: 4px !important;
	}

	.fa-info-circle{
		font-size: 28px;
    	color: #ffc107;
    	cursor: pointer;
	}
</style>
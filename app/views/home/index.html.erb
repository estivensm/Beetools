<div class="col-xl-12">
   <div class="card">
      <div class="card-body">
      <h4> Bienvenido <%= current_user.first_name? ? current_user.first_name : "Usuario de BeeTools"  %></h4>
      	<br>
      	<div class="row">
      		<% if @review.any? %>
	      		<div class="col-xl-6">
	      			<div class="table-stats order-table ov-h">
			            <table class="table table_form ">

			              <thead>
			            		<tr>
			            			<th colspan="3"><span class="badge badge-warning"> Tienes <%= @review.count %> Documento Pendiente Revisar</span></th>
			            		</tr>
			              </thead>
			              <thead>
			                <tr>
			                  <th class="serial">#</th>
			                  <th>Usuario</th>
			                  <th>Informacion</th>
			                </tr>
			              </thead>

			              <tbody>
			                <% @review.each_with_index do |review, position| %>
			                  <tr>
			                    <td class="serial"><%= position + 1 %>.</td>
			                    <td class="avatar">
			                      <div class="round-img">
			                        <%= review.user.avatar? ? image_tag(review.user.avatar_url(), class: "rounded-circle",id: "user-avatar1") : image_tag("https://dnuba.s3.amazonaws.com/uploads/bank_image/achivo/44/user.jpeg", class: "rounded-circle")%>
			                        </div>
			                    </td>
			                     <td>
			                    	<div class="text-center">
			         					<i class="fas fa-info-circle" data-toggle="modal" data-target="#exampleModal<%= review.id %>"></i>
			                    	</div>

									<!-- Modal -->
									<div class="text-left">
										<div class="modal fade bd-example-modal-lg" id="exampleModal<%= review.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
										  <div class="modal-dialog modal-lg" role="document">
										    <div class="modal-content">
										      <div class="modal-header">
										        <h5 class="modal-title" id="exampleModalLabel">Informacion
										        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
										          <span aria-hidden="true">&times;</span>
										        </button>
										        </h5>
										      </div>
										      <div class="modal-body">
										        <%= render "parciales/review", review: review %>
										      </div>
										      <div class="modal-footer">
										        <button type="button" class="btn btn-warning" data-dismiss="modal">Cerrar</button>
										      </div>
										    </div>
										  </div>
										</div>
									</div>
			                    </td>
			                  </tr>
			                <% end %>
			              </tbody>
			            </table>
	          		</div> 
	      		</div>
      		<% end %>

			<% if @aprove.any? %>
	      		<div class="col-xl-6">
	      			<div class="table-stats order-table ov-h">
			            <table class="table table_form ">

			            	<thead>
			            		<tr>
			            			<th colspan="3"><span class="badge badge-warning"> Tienes <%= @aprove.count %> Documento Pendiente de Aprobar</span></th>
			            		</tr>
			            	</thead>
			              <thead>
			                <tr>
			                  <th class="serial">#</th>
			                  <th>Usuario</th>
			                  <th>Informacion</th>
			                </tr>
			              </thead>

			              <tbody>
			                <% @aprove.each_with_index do |aprove, position| %>
			                  <tr>
			                    <td class="serial"><%= position + 1 %>.</td>
			                    <td class="avatar">
			                      <div class="round-img">
			                        <%= aprove.user.avatar? ? image_tag(aprove.user.avatar_url(), class: "rounded-circle",id: "user-avatar1") : image_tag("https://dnuba.s3.amazonaws.com/uploads/bank_image/achivo/44/user.jpeg", class: "rounded-circle")%>
			                        </div>
			                    </td>
			                    <td>
			                    	<div class="text-center">
			         					<i class="fas fa-info-circle" data-toggle="modal" data-target="#exampleModal<%= aprove.id %>"></i>
			                    	</div>

									<!-- Modal -->
									<div class="text-left">
										<div class="modal fade bd-example-modal-lg" id="exampleModal<%= aprove.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
										  <div class="modal-dialog modal-lg" role="document">
										    <div class="modal-content">
										      <div class="modal-header">
										        <h5 class="modal-title" id="exampleModalLabel">Informacion
										        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
										          <span aria-hidden="true">&times;</span>
										        </button>
										        </h5>
										      </div>
										      <div class="modal-body">
										        <%= render "parciales/aprove", aprove: aprove %>
										      </div>
										      <div class="modal-footer">
										        <button type="button" class="btn btn-warning" data-dismiss="modal">Cerrar</button>
										      </div>
										    </div>
										  </div>
										</div>
									</div>
			                    </td>	
			                  </tr>
			                <% end %>
			              </tbody>
			            </table>
	          		</div> 
	      		</div>
      		<% end %>
      	</div>

       </div>
    </div>
</div>


<style type="text/css" media="screen">
	.padding{
		padding: 4px !important;
	}

	.fa-info-circle{
		font-size: 28px;
    	color: #ffc107;
    	cursor: pointer;
	}
</style>
<div class="modal fade" id="product-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">
          <% if action_name == "new"%>
          Crear Nuevo Campo
          <% else %>
            Editar Campo
          <% end -%>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        </h5>
      </div>
      <div class="modal-body">
        <%= form_with(model: field, remote:true) do |form| %>
        <% if field.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(field.errors.count, "error") %> prohibited this field from being saved:</h2>

            <ul>
            <% field.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="col-md-12 no-padding-left">
          <%= form.label "Nombre" %>
          <%= form.text_field :name, class: "form form-control" %>
        </div>

        <br>

        <%= form.hidden_field :field_type, :value => "Texto" %>


        <br>

        <div class="col-md-12 no-padding-left">
          <%# form.label "Agregar Al Formulario" %>
          <%# form.text_field :form, class: "form form-control" %>
        </div>

        <br>

        <!--
        <div class="row">
          <div class="col-md-6 text-center">
            <%# form.label "Estado" %>
            <%# form.check_box :state, class: "form form-control" %>
          </div>

          <div class="col-md-6 text-center">
            <%# form.label "Requerido" %>
            <%# form.check_box :required, class: "form form-control" %>
          </div>
        </div>
        -->
        
        <br>

        <%= form.hidden_field :admin_user %>
        <%= form.hidden_field :user_id, :value => current_user.id %>

        <div class="col-md-12 modal-footer">
          <%= form.submit "Guardar", class: "btn btn-success add_service" %>
        </div>

      </div>
      <% end %>

    </div>
  </div>
</div>


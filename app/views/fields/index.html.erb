<p id="notice"><%= notice %></p>


<div class="orders">
  <div class="row">
    <div class="col-xl-12">
      <div class="card">

        <div class="card-body">
          <h4 class="box-title">Campos Creados</h4>
        </div>

        <div class="card-body">
          <div class="table-stats order-table ov-h">
            <table class="table table_form ">

              <thead>
                <tr>
                  <th class="serial">#</th>
                  <th class="avatar">Usuario </th>
                  <th>Tipo de Campo</th>
                  <th>Nombre</th>
                  <th>Estado</th>
                  <th>Requerido</th>
                  <th>En El Formulario</th>
                  <th colspan="3">Acciones</th>
                </tr>
              </thead>

              <tbody>
                <% @fields.each_with_index do |field, posicion| %>
                  <tr id="dele<%= field.id%>">
                    <td class="serial"><%= posicion + 1 %>.</td>
                      <td><%= field.user_id %></td>
                      <td><%= field.name %></td>
                      <td><%= field.field_type %></td>
                      <td><%= get_icon(field.state).html_safe %></td>
                      <td><%= get_icon(field.required).html_safe %></td>
                      <td><%= field.form %></td>
                      <td>
                        <%= link_to 'Edit', edit_field_path(field), remote:true %>
                        <%= link_to 'Destroy', field, method: :delete, data: { confirm: 'Are you sure?' }, remote:true %>
                      </td>
                    </tr>
                <% end %>
              </tbody>
            </table>
          </div> 
        </div>

        <div class="col-md-12 modal-footer">
          <%= link_to 'Nuevo Campo', new_field_path, class: "btn btn-success ", remote:true %>
        </div>

      </div> 
    </div>  
  </div>
</div>

<style type="text/css" media="screen">
  .true{
    color: green;
  }

  .false{
    color: red;
  }
</style>
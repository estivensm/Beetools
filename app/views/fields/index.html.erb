<p id="notice"><%= notice %></p>

<h1>Fields</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Field type</th>
      <th>State</th>
      <th>Required</th>
      <th>Form</th>
      <th>Admin user</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fields.each do |field| %>
      <tr>
        <td><%= field.name %></td>
        <td><%= field.field_type %></td>
        <td><%= field.state %></td>
        <td><%= field.required %></td>
        <td><%= field.form %></td>
        <td><%= field.admin_user %></td>
        <td><%= field.user_id %></td>
        <td><%= link_to 'Show', field %></td>
        <td><%= link_to 'Edit', edit_field_path(field) %></td>
        <td><%= link_to 'Destroy', field, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


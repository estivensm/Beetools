<p id="notice"><%= notice %></p>


<div class="orders">
  <div class="row">
    <div class="col-xl-12">
      <div class="card">

        <div class="card-body">
          <h4 class="box-title">Campos Creados</h4>
        </div>

        <div class="card-body">
          <div class="table-stats order-table ov-h">
            <table class="table table_form ">

              <thead>
                <tr>
                  <th>Tipo de Campo</th>
                  <th>Nombre</th>
                  <th colspan="3">Acciones</th>
                </tr>
              </thead>

              <tbody>
                <% @fields.each do |field| %>
                  <tr id="dele<%= field.id%>">
                      <td><%= field.name %></td>
                      <td><%= field.field_type %></td>

                    <td>

                        <%= link_to edit_field_path(field), data: {toggle: "tooltip", placement: "bottom" }, remote:true, title: "Editar", class: "btn" do %>
                          <i class="fas fa-pencil-alt"></i>
                        <% end -%>

                        <a href="/fields/<%= field.id %>" class="btn" data-method="delete" data-toggle="tooltip" data-placement="bottom" title="Eliminar Tipo de Documento" data-confirm="Estas Seguro?">
                          <i class="fas fa-trash-alt" data-remote="true" ></i>
                        </a>

                    </td>
                    </tr>
                <% end %>
              </tbody>
            </table>
          </div> 
        </div>

        <div class="col-md-12 modal-footer">
          <%= link_to 'Nuevo Campo', new_field_path, class: "btn btn-success ", remote:true %>
        </div>

      </div> 
    </div>  
  </div>
</div>

<style type="text/css" media="screen">
  .true{
    color: green;
  }

  .false{
    color: red;
  }
</style>
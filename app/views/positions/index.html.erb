<div class="orders">
  <div class="row">
    <div class="col-xl-12">
      <div class="card">

        <div class="card-body">
          <h4 class="box-title">Cargos </h4>
        </div>

        <div class="card-body">
          <div class="table-stats order-table ov-h">
            <table class="table table_form ">

              <thead>
                <tr>
                  <th class="serial">#</th>
                  <th class="avatar">Usuario </th>
                  <th>Nombre</th>
                  <th>Descripcion</th>
                  <th>Processo</th>
                  <th colspan="3">Acciones</th>
                </tr>
              </thead>

              <tbody>
                <% @positions.each_with_index do |position, posicion| %>
                  <tr>
                    <td class="serial"><%= posicion + 1 %>.</td>
                    <td class="avatar">
                      <div class="round-img">
                        <%= position.user.avatar? ? image_tag(position.user.avatar_url(), class: "rounded-circle",id: "user-avatar1") : image_tag("https://dnuba.s3.amazonaws.com/uploads/bank_image/achivo/44/user.jpeg", class: "rounded-circle")%>
                        </div>
                    </td>
                    <td><%= position.name %></td>
                    <td><%= position.description %></td>
                    <td><%= position.proces_id %></td>
                    <td><%= link_to 'Show', position %></td>
                    <td><%= link_to 'Edit', edit_position_path(position), remote: true %></td>
                    <td><%= link_to 'Destroy', position, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div> 
        </div>

        <div class="col-md-12 modal-footer">
          <%= link_to 'Nuevo Cargo', new_position_path, class: "btn btn-success ", remote: true %>
        </div>
   

      </div> 
    </div>  
  </div>
</div>



<div class="orders">
  <div class="row">
    <div class="col-xl-12">
      <div class="card">

        <div class="card-body">
          <h4 class="box-title">Procesos </h4>
        </div>

        <div class="card-body">
          <div class="table-stats order-table ov-h">
            <table class="table table_form ">

              <thead>
                <tr>
                  <th>Nombre</th>
                  <th>Descripcion</th>
                  <th colspan="3">Acciones</th>
                </tr>
              </thead>

              <tbody>
                <% @document_types.each do |document_type| %>
                  <tr>
                    <td><%= document_type.name %></td>
                    <td><%= document_type.description %></td>

                    <td>
                        <%= link_to document_type, class: "btn", data: {toggle: "tooltip", placement: "bottom" }, title: "Ver Tipo de Documento" do %>
                          <i class="fas fa-eye"></i>
                        <% end -%>

                        <%= link_to edit_document_type_path(document_type), data: {toggle: "tooltip", placement: "bottom" }, title: "Editar", class: "btn" do %>
                          <i class="fas fa-pencil-alt"></i>
                        <% end -%>

                        <a href="/document_types/<%= document_type.id %>" class="btn" data-method="delete" data-toggle="tooltip" data-placement="bottom" title="Eliminar Tipo de Documento" data-confirm="Estas Seguro?">
                          <i class="fas fa-trash-alt"></i>
                        </a>

                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div> 
        </div>

        <div class="col-md-12 modal-footer">
          <%= link_to 'Nuevo Tipo de Documento', new_document_type_path, class: "btn btn-success " %>
        </div>
   

      </div> 
    </div>  
  </div>
</div>

<script type="text/javascript">
  $(function () {
  $('[data-toggle="tooltip"]').tooltip()
})
</script>
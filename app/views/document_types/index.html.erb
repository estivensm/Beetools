<div class="orders">
  <div class="row">
    <div class="col-xl-12">
      <div class="card">

        <div class="card-body">
          <h4 class="box-title">Procesos </h4>
        </div>

        <div class="card-body">
          <div class="table-stats order-table ov-h">
            <table class="table table_form ">

              <thead>
                <tr>
                  <th class="serial">#</th>
                  <th>Nombre</th>
                  <th>Descripcion</th>
                  <th colspan="3">Acciones</th>
                </tr>
              </thead>

              <tbody>
                <% @document_types.each_with_index do |document_type, position| %>
                  <tr>
                    <td class="serial"><%= position + 1 %>.</td>
                    <td><%= document_type.name %></td>
                    <td><%= document_type.description %></td>
                    <td><%= link_to 'Show', document_type %></td>
                    <td><%= link_to 'Edit', edit_document_type_path(document_type), remote: true %></td>
                    <td><%= link_to 'Destroy', document_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div> 
        </div>

        <div class="col-md-12 modal-footer">
          <%= link_to 'Nuevo Tipo de Documento', new_document_type_path, class: "btn btn-success ", remote:true %>
        </div>
   

      </div> 
    </div>  
  </div>
</div>


